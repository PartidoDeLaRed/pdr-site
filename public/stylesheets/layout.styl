/* #Site Styles
================================================== */

a
	border: 0;
	outline: none !important;
	box-shadow: none !important;

body
	font-family: "ff-tisa-web-pro";
	background: #059ebd url('../images/bg-splash.jpg')  left bottom fixed;
	background-size: cover;
	-webkit-font-smoothing: antialiased; /* Fix for webkit rendering */
	-webkit-text-size-adjust: 100%;

h1,h2,h3,h4,h5,h6, .btn
	font-family: "brandon-grotesque";
	font-weight: bold;

.modal
	border-radius: 0;
	.modal-header
		text-transform: uppercase;
		h3 
			font-size: 20px;
			padding: 20px;

	label
		text-align: left;

.popover
	border-radius: 0;
	.popover-title
		background: white;
		text-transform: uppercase;
		font-size: 11px;
		letter-spacing: 2px;

.hide
	display: none;

.btn 
	text-transform: uppercase;
	letter-spacing: 2px;
	font-size: 12px;
	background: #fff;
	display: inline-block;
	padding: 12px 24px;
	border-radius: 3px;
	text-decoration: none;
	border: 2px solid #333;
	color: #333;
	text-shadow: none;
	border-width: 2px;
	box-shadow: none;

	&:hover
		background-color: #333;
		color: white;

	&.btn-white
		background: white;
		box-shadow: none;



.container
	padding: 0 50px;


